{
  "name": "video-gallery-watcher",
  "version": "1.0.0",
  "description": "Auto-updating video gallery with data.json file watcher",
  "main": "data-tracker.js",
  "scripts": {
    "start": "./start-data-gallery.sh",
    "start-static": "./start-static-gallery.sh",
    "start-auto": "./start-data-gallery.sh",
    "restart": "./restart-data-gallery.sh",
    "status": "./check-status.sh",
    "add-video": "node add-video.js",
    "data-tracker": "node data-tracker.js",
    "serve": "python3 -m http.server 8080",
    "dev": "concurrently \"npm run data-tracker\" \"npm run serve\""
  },
  "dependencies": {
    "chokidar": "^3.5.3"
  },
  "devDependencies": {
    "concurrently": "^7.6.0"
  },
  "keywords": ["video", "gallery", "data", "auto-update"],
  "author": "Szymon",
  "license": "MIT"
} 